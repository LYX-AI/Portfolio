{
  // 这行 $schema 可以帮助 VS Code 用正确的 tsconfig 模式来校验
  "$schema": "https://json.schemastore.org/tsconfig.json",

  "compilerOptions": {
    "target": "es2016",                
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,         // ← 一定要有，启用 .json 导入
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests.json"
  ]
}
